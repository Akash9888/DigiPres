<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--for doctor info-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/SeaShell"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Md. Muzammel Hussain"
                        android:textSize="20dp"
                        android:textColor="@color/DarkGreen"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_Degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MBBS (CU), BCS (HEALTH), DLO(CU)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENT Specialist &amp; Surgeon "
                        android:textSize="18dp"
                        android:textColor="@color/DarkRed"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_regi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reg: No. A-12145"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/doc_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: mz100@gamil.com"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/doc_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile: 01711433025"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <!--for patient info-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/aqua"
                    android:orientation="vertical">

                    <!--for patient name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="P/N:"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/p_name"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="Kamrul Hasan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="Date:"/>
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="17 March 20121"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:text="Age:"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/p_age"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="100"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:text="Sex:"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/p_gender"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="Others"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/black"
                            android:text="Mobile:"/>
                        <TextView
                            android:id="@+id/p_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="01776774988"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BurlyWood"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Weight (kg)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Height (cm)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BMI (kg/m2)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_bmi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="81dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BP(mmHg)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_bp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#020202" />
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/BurlyWood"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Temp (F/C)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000/00"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pulse"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_pulse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textColor="#020202" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/front"
                android:background="@drawable/omg">

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="C/C:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_cc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Ready Reports:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_rr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Advice:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_adv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/first"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_rx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icons8_prescription_64" />

                    <TextView
                        android:id="@+id/p_rx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="1. NApa"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main"
            android:layout_margin="10dp"
            android:text="save &amp; share Prescription" />


        <ProgressBar
            android:id="@+id/Progress_bar"
            android:layout_below="@id/btn_share"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:visibility="invisible" />




    </RelativeLayout>








</ScrollView>