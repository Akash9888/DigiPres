<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".FinalActivity"
    android:background="@color/LemonChiffon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--for doctor info-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/SeaShell"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Md. Muzammel Hussain"
                        android:textSize="20dp"
                        android:textColor="@color/DarkGreen"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_Degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MBBS (CU), BCS (HEALTH), DLO(CU)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENT Specialist &amp; Surgeon "
                        android:textSize="18dp"
                        android:textColor="@color/DarkRed"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asst. Professor, Department of ENT"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_office"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sylhet M.A.G. Osmani Medical Collge"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/doc_regi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reg: No. A-12145"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/doc_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: mz100@gamil.com"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/doc_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile: 01711433025"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <!--for patient info-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Khaki"
                    android:orientation="vertical">

                    <!--for patient name & date-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="P/N:"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/p_name"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="Kamrul Hasan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="Date:"/>
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="17 March 20121"/>


                    </LinearLayout>

                    <!--for patient age & mobile-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:text="Age:"
                            android:textSize="17dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/p_age"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="100"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/black"
                            android:text="Mobile:"/>
                        <TextView
                            android:id="@+id/p_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:text="01776774988"/>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Wheat"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight (kg)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height (cm)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BMI"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_bmi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.00"
                                android:textColor="#020202" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BP (mmHg)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_bp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0/0"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temp (F/C)"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0/0"
                                android:textColor="#020202" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pulse"
                                android:textColor="#E91E63" />

                            <TextView
                                android:id="@+id/p_pulse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#020202" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/omg"
                android:layout_below="@id/front">

                <LinearLayout
                    android:id="@+id/first"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="C/C:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_cc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Ready Reports:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_rr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Advice:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/p_adv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="kjkjkjkjkjkkj"
                        android:textColor="@color/black"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/first"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_rx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/icons8_prescription_64" />

                    <TextView
                        android:id="@+id/p_rx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="1. NApa"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/main"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_share"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/teal_700"
                android:text="share"
                android:onClick="share_pres"/>

            <Button
                android:id="@+id/back_decider"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Print"
                android:backgroundTint="@color/teal_700"
                android:onClick="print_pres"/>




        </LinearLayout>

        <ProgressBar
            android:id="@+id/Progress_bar"
            android:layout_below="@id/btn"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:visibility="invisible" />


    </RelativeLayout>



</ScrollView>